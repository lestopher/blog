<h1>Sign in</h1>
<% if flash[:error] %>
  <div class="flashMsg error"><%= flash[:error] %></div>
<% elsif flash[:notice] %>
  <div class="flashMsg success"><%= flash[:notice] %></div>
<% end %>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>

  <div class="actions"><%= f.submit "Sign in" %></div>
<% end %>
   
<p>New user? <%= link_to 'Sign up now!', new_user_path %></p>
